.container {
  height: 100vh;
  overflow: hidden;
}
@-webkit-keyframes fade {
from {
    -webkit-transform: translateY(-30rpx);
            transform: translateY(-30rpx);
    opacity: 0;
}
to {
    opacity: 1;
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
}
@keyframes fade {
from {
    -webkit-transform: translateY(-30rpx);
            transform: translateY(-30rpx);
    opacity: 0;
}
to {
    opacity: 1;
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
}
.container .header {
  height: 80rpx;
  background-color: #007AFF;
  padding: 10rpx 30rpx;
  line-height: 80rpx;
  position: relative;
}
.container .header .search {
  height: 60rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 0 10rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  background-color: rgba(255, 255, 255, 0.5);
  margin-bottom: 5rpx;
}
.container .header .search input {
  height: 100%;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  color: white;
}
.container .header .search .btns {
  width: 110rpx;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.container .header .search .btns .icon {
  width: 35rpx;
  height: 35rpx;
  color: white;
}
.container .header .search .btns .close {
  width: 45rpx;
  height: 45rpx;
}
.container .header .search .btns .icon:active {
  opacity: 0.8;
}
.container .header .search_suggestion {
  -webkit-transition: all 0.3s;
  transition: all 0.3s;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  background-color: #ffffff;
  color: #95a5a6;
}
.container .header .search_suggestion text {
  font-size: 25rpx;
  padding: 5rpx 10rpx;
}

